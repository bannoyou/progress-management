            document.getElementById("overlayMenu").style.width = "100%";
        };

        document.getElementById("closeMenu").onclick = function () {
            document.getElementById("overlayMenu").style.width = "0";
        };
    </script>
    <script>
        document.querySelectorAll(".accordion_header").forEach((header) => {
            header.addEventListener("click", () => {
                const inner = header.nextElementSibling;
                if (inner.style.display === "block") {
                    inner.style.display = "none";
                } else {
                    inner.style.display = "block";
                }
            });
        });

        document.querySelectorAll(".accordion_header a").forEach((link) => {
            link.addEventListener("click", (event) => {
                event.stopPropagation(); // アコーディオン展開とリンクを分ける
            });
        });
        
    </script>
